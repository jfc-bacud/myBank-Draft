<Window x:Class="myBank_Draft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myBank_Draft"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Source="/Assets/Blue Flat Illustrated Finance Company Logo.jpg" Height="315" Width="336" Margin="232,10,232,109" />
        <StackPanel Margin="264,272,254,22" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Username"/>
                <TextBox x:Name="userTB" Width="165"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Password"/>
                <TextBox x:Name="passwordTB" Margin="3,0,0,0" Width="165"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="verifyBTN" Content="Log In" Width="80" Height="25" Margin="0,0,10,0" Click="verifyBTN_Click"/>
                <Button x:Name="newBTN" Content="New User" Width="80" Height="25"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
